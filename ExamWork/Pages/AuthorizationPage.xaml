<Page x:Class="ExamWork.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <!--ЛОГИН-->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Логин:" Width="60"/>
            <TextBox x:Name="loginTextBox" Width="200" />
        </StackPanel>
        <!--ПАРОЛЬ-->
        <StackPanel Orientation="Horizontal">
            <Label Content="Пароль:" Width="60"/>
            <PasswordBox x:Name="passwordBox" Width="200"/>
        </StackPanel>
        <!--КНОПКИ-->
        <StackPanel Orientation="Horizontal">
            <Button x:Name="authorizationButton" Content="Авторизоваться" Margin="0,5,5,0" Width="165" Click="AuthorizationButton_Click"/>
            <Button x:Name="guestButton" Content="Войти как гость" Margin="0,5,0,0" Click="GuestButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
